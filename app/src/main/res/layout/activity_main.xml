<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="30"
            android:inputType="number"
            android:padding="5mm"
            android:text="0" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/boton7"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="7" />

                <Button
                    android:id="@+id/boton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="8" />

                <Button
                    android:id="@+id/boton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="9" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/multiplicar" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/boton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="4" />

                <Button
                    android:id="@+id/boton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="5" />

                <Button
                    android:id="@+id/boton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="6" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="53dp"
                    android:layout_height="59dp"
                    app:srcCompat="@mipmap/division" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/boton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="1" />

                <Button
                    android:id="@+id/boton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="2" />

                <Button
                    android:id="@+id/boton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="3" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    app:srcCompat="@mipmap/resta" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/boton0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="0" />

                <Button
                    android:id="@+id/punto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="editarText"
                    android:text="." />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="75dp"
                    android:layout_height="39dp"
                    app:srcCompat="@mipmap/igual" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="49dp"
                    android:layout_height="47dp"
                    app:srcCompat="@mipmap/suma" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>